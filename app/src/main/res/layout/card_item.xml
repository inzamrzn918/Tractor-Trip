<!-- res/layout/item_card.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:background="@drawable/card_background"
    android:elevation="4dp"
    tools:ignore="ExtraText"
    android:layout_margin="10dp">

    <!-- Tractor Icon -->
    <ImageView
        android:id="@+id/tractorIcon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_bus_24"
        android:contentDescription="@string/tractor_icon" />

    <!-- Content Area -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="8dp">

        <!-- Driver Info -->
        <TextView
            android:id="@+id/tvDriver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/driver_demo_text"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="16sp" />

        <!-- Vehicle Info -->
        <TextView
            android:id="@+id/tvVehicle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vn_demo"
            android:textColor="#555"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Rate -->
        <TextView
            android:id="@+id/tvRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rate_demo"
            android:textColor="#1E88E5"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- Date and Time -->
        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_time_demo"
            android:textColor="#777"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>
</LinearLayout>
